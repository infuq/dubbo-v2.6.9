<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.2.xsd
            http://code.alibabatech.com/schema/dubbo
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <dubbo:application name="infuq-dubbo-provider" />
    <dubbo:registry protocol="zookeeper" address="192.168.0.101:2181" check="false" />
<!--    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181" check="false" />-->
    <dubbo:protocol name="dubbo" port="20880" threads="200" threadpool="fixed"  /><!-- telnet 127.0.0.1 20880 -->

    <dubbo:service ref="queryUserInfoFacade" interface="com.infuq.provider.QueryUserInfoFacade" version="1.0.0" />
    <bean id="queryUserInfoFacade" class="com.infuq.provider.QueryUserInfoFacadeImpl" />


    <!--自动扫描与装配-->
    <context:component-scan base-package="com.infuq.**" />


</beans>